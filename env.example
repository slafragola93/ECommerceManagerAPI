# Database Configuration
DATABASE_MAIN_ADDRESS=localhost
DATABASE_MAIN_PORT=3306
DATABASE_MAIN_NAME=ecommerce_db
DATABASE_MAIN_USER=ecommerce_user
DATABASE_MAIN_PASSWORD=your_secure_password

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=hybrid  # redis, memory, hybrid

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# Cache TTL Settings (in seconds)
CACHE_DEFAULT_TTL=300        # 5 minutes
CACHE_STALE_TTL=900          # 15 minutes
CACHE_SHORT_TTL=60           # 1 minute
CACHE_MEDIUM_TTL=3600        # 1 hour
CACHE_LONG_TTL=86400         # 24 hours

# Cache Memory Settings
CACHE_MAX_MEM_ITEMS=1000
CACHE_MAX_VALUE_SIZE=1048576  # 1MB

# Cache Security
CACHE_KEY_SALT=ecommerce-cache-salt-change-this

# Cache Feature Flags
CACHE_ORDERS_ENABLED=true
CACHE_PRODUCTS_ENABLED=true
CACHE_CUSTOMERS_ENABLED=true
CACHE_EXTERNAL_APIS_ENABLED=true

# Cache Circuit Breaker
CACHE_ERROR_THRESHOLD=0.5    # 50% error rate
CACHE_RECOVERY_TIMEOUT=300   # 5 minutes

# Cache Metrics and Logging
CACHE_METRICS_ENABLED=true
CACHE_LOG_LEVEL=INFO

# Application Settings
MAX_LIMIT=1000
LIMIT_DEFAULT=100

# Redis Commander (Cache Management UI)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# Grafana (Metrics Dashboard)
GRAFANA_PASSWORD=admin

# External API Configuration
# PrestaShop
PRESTASHOP_API_KEY=your_prestashop_api_key
PRESTASHOP_BASE_URL=https://your-shop.com/api

# FatturaPA
FATTURAPA_API_KEY=your_fatturapa_api_key
FATTURAPA_BASE_URL=https://api.fatturapa.com/ws/V10.svc/rest

# Company Information
COMPANY_VAT_NUMBER=01234567890
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Address
COMPANY_CIVIC=123
COMPANY_CAP=12345
COMPANY_CITY=Your City
COMPANY_PROVINCE=XX
COMPANY_PHONE=+39 123 456 7890

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Development/Testing
ENVIRONMENT=development
DEBUG=true
